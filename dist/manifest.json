{
  "manifest_version": 2,
  "name": "soyagaci",
  "description": "Converts lineage information which can be retrieve from E-devlet (Turkish Government Service) to an actual lineage graphic.",
  "version": "1.0",
  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "file:///home/yvz/soyagaci-extension/dist/index.html",
        "https://*/",
        "http://*/"
      ],
      "js": [
        "display.bundle.js"
      ]
    }
  ]
}
